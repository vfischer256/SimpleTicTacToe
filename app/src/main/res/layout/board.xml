<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:elevation="@dimen/elevation_low"
    android:padding="@dimen/tile_padding"
    tools:context=".GameActivity">
    <ImageButton android:id="@+id/tile1" style="@style/TileButton"
        android:layout_column="0" android:layout_row="0"/>
    <ImageButton android:id="@+id/tile2" style="@style/TileButton"
        android:layout_column="1" android:layout_row="0"/>
    <ImageButton android:id="@+id/tile3" style="@style/TileButton"
        android:layout_column="2" android:layout_row="0"/>
    <ImageButton android:id="@+id/tile4" style="@style/TileButton"
        android:layout_column="0" android:layout_row="1"/>
    <ImageButton android:id="@+id/tile5" style="@style/TileButton"
        android:layout_column="1" android:layout_row="1"/>
    <ImageButton android:id="@+id/tile6" style="@style/TileButton"
        android:layout_column="2" android:layout_row="1"/>
    <ImageButton android:id="@+id/tile7" style="@style/TileButton"
        android:layout_column="0" android:layout_row="2"/>
    <ImageButton android:id="@+id/tile8" style="@style/TileButton"
        android:layout_column="1" android:layout_row="2"/>
    <ImageButton android:id="@+id/tile9" style="@style/TileButton"
        android:layout_column="2" android:layout_row="2"/>
</GridLayout>
